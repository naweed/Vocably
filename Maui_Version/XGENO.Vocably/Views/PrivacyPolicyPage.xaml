<?xml version="1.0" encoding="utf-8" ?>
<views:ViewBase 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:XGENO.Vocably.Views"
    xmlns:viewmodels="clr-namespace:XGENO.Vocably.ViewModels"
    xmlns:controls="clr-namespace:XGENO.Vocably.ViewControls"
    x:Class="XGENO.Vocably.Views.PrivacyPolicyPage"
    x:TypeArguments="viewmodels:PrivacyPolicyPageViewModel"
    ContentDisplayMode="NavigationBar"
    PageMode="Modal"
    PageTitle="{Binding Title}">

    <views:ViewBase.PageContent>
        <Grid>
            <VerticalStackLayout
                Spacing="12"
                Margin="32,24,32,0">

                <Image
                    Source="imgprivacy"
                    WidthRequest="124"
                    HeightRequest="124"
                    HorizontalOptions="Center"
                    Margin="0,0,0,0"/>

                <Label
                    Style="{StaticResource RegularLightText16}"
                    LineBreakMode="WordWrap"
                    LineHeight="1.1"
                    Margin="0,12,0,0">
                    <Label.Text>
                        Your privacy is extremely important to us. This application does not collect any personal data from you or your device, and we do not share your information with any third party.
                    </Label.Text>
                </Label>


                <Label
                    Style="{StaticResource RegularLightText16}"
                    LineBreakMode="WordWrap"
                    LineHeight="1.1"
                    Margin="0,12,0,0">
                    <Label.Text>
                        Data collected for the purpose of Leaderboard is anonymous and does not contain any personal identification information.
                    </Label.Text>
                </Label>


            </VerticalStackLayout>
        </Grid>
    </views:ViewBase.PageContent>
    
</views:ViewBase>
